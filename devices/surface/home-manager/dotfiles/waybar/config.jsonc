        "format-icons": [
            "Û∞§Ø",
            "Û∞§ü",
            "Û∞§¢",
            "Û∞§•",
            "Û∞§®"
        ]
    },
    "bluetooth": {
        "format": "{icon}",
        "interval": 30,
        "format-icons": {
            "enabled": "Ôäî",
            "disabled": "Û∞Ç≤"
        },
        "tooltip-format": "{status}",
        "on-click": "blueman-manager"
    },
