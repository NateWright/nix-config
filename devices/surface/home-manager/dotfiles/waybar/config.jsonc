{
    "height": 20, // Waybar height (to be removed for auto height)
    "layer": "top", // Waybar at top layer
    "modules-left": [
        "custom/launcher",
        "temperature",
        "cpu",
        "memory",
        "custom/weather",
        "wlr/workspaces"
    ],
    "modules-center": [
        "mpris"
    ],
    "modules-right": [
        // "network",
        // "bluetooth",
        "pulseaudio#microphone",
        "pulseaudio",
        "backlight",
        "battery",
        "clock",
        "tray",
        "custom/power-menu"
    ],
    "wlr/workspaces": {
        "format": "{icon}",
        "all-outputs": true,
        "on-click": "activate",
        "format-icons": {
            "active": " Û∞ÆØ",
            "default": "Û∞åΩ"
        }
    },
    "hyprland/window": {
        "format": "{}"
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%b %d %Y}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
        "interval": 10,
        "format": "Ôíº  {}%",
        "max-length": 10,
